
<div class="col-md-12">
	<%= simple_form_for ([@pet, @pet.reviews.build]) do |f| %>
		<div id="rating-form">
			<%= f.label :rating %>
			<%= f.number_field :rating, class: "form-control", max: 5 %><br>
		</div>
		
		<%= f.label :comment %>
		<%= f.text_field :comment, class: "form-control", rows: 5  %><br>
		<%= f.submit "Update Review", class: "btn btn-primary"%>
	<% end %>
</div>

