<div class="col-md-6 col-md-offset-3">

	<div class="edit-review-form">

        <h1>Edit Review </h1>
          <%= simple_form_for([@pet, @review]) do |f| %>
            <%= f.label :rating %>
            <%= f.number_field :rating, class: "form-control", max: 5  %><br>
            <%= f.label :comment %>
            <%= f.text_field :comment, class: "form-control", rows: 5  %><br>
            <%= f.button :submit, class: "btn btn-primary"%>
        <% end %>
	</div>

</div>

