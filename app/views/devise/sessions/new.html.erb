
<div class="col-md-6 ">

<div class="col-md-6 login_btn ">
  <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-primary"%>
</div>


  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="col-md-6 text_box">
      <span class="txt1">
        <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      </span>
      <span class="col-md-6 text_box">
        <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </span>
    </div>

    <div class=" col-md-6 submit_btn">
      <%= f.submit "Sign In", class: "btn btn-primary"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>